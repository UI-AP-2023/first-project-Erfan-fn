<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="810.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxproject.UltimatePurchaseController">
   <children>
      <ImageView fitHeight="650.0" fitWidth="836.0">
         <image>
            <Image url="@image/chargeAccount.png" />
         </image>
      </ImageView>
      <Button fx:id="btn_Back" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#back" prefHeight="31.0" prefWidth="74.0" style="-fx-background-color: #ffffff;" text="Back">
         <font>
            <Font name="Segoe UI Light" size="16.0" />
         </font>
      </Button>
      <HBox fx:id="hBox_Discounts" layoutX="14.0" layoutY="185.0" prefHeight="46.0" prefWidth="424.0">
         <children>
            <Button fx:id="btn_SubmitDiscounts" alignment="CENTER" mnemonicParsing="false" onAction="#applyDiscount" prefHeight="39.0" prefWidth="74.0" text="Submit">
               <font>
                  <Font name="Segoe UI Light" size="15.0" />
               </font>
            </Button>
            <TextField fx:id="txt_Discount" alignment="CENTER" prefHeight="40.0" prefWidth="290.0" promptText="Enter Discount/s Code(seperated by _ )">
               <font>
                  <Font name="Segoe UI Light" size="14.0" />
               </font>
            </TextField>
         </children>
      </HBox>
      <TreeView fx:id="treeV_Prices" editable="true" layoutX="529.0" prefHeight="117.0" prefWidth="306.0" />
      <ImageView fitHeight="37.0" fitWidth="127.0" layoutX="695.0" layoutY="599.0">
         <image>
            <Image url="@image/Picture1.png" />
         </image>
      </ImageView>
      <Button fx:id="btn_ultimatePurchase" layoutX="25.0" layoutY="594.0" mnemonicParsing="false" onAction="#ultimatePurchase" prefHeight="40.0" prefWidth="262.0" style="-fx-background-color: #55948e;" text="Accept this Price and Purchase" textFill="WHITE">
         <font>
            <Font name="Segoe UI Light" size="18.0" />
         </font>
      </Button>
      <Button fx:id="btn_SeeDiscounts" layoutX="310.0" layoutY="594.0" mnemonicParsing="false" onAction="#seeDiscounts" prefHeight="40.0" prefWidth="170.0" style="-fx-background-color: #395ba6;" text="See Your Discounts" textFill="WHITE">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
